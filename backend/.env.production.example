# Production Environment Configuration Template
# Copy this file to .env.production and update with actual values

ENVIRONMENT=production

# Security - MUST CHANGE!
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database - PostgreSQL (Dockerå†…)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/todoShare

# CORS - Update with your actual domain
# Example: ["https://todoapp.yourdomain.com","https://www.todoapp.yourdomain.com"]
ALLOWED_ORIGINS=["https://YOUR_DOMAIN","https://www.YOUR_DOMAIN"]

# Google OAuth - Production credentials from GCP Console
GOOGLE_CLIENT_ID=YOUR_PRODUCTION_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_PRODUCTION_GOOGLE_CLIENT_SECRET